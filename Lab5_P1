public class Lab5_P1 {
	public static void main(String[] args) {
		//create an object of Triangle class
		Scanner scanner = new Scanner(System.in);
		System.out.print("Enter three sides: ");
		double side1 = scanner.nextDouble();
		double side2 = scanner.nextDouble();
		double side3 = scanner.nextDouble();
		System.out.print("Enter the color: ");
		String color = scanner.next();
		System.out.print("Enter a boolean value for filled: ");
		Boolean value = scanner.nextBoolean();
		Triangle my = new Triangle(side1, side2, side3, color, value);
		System.out.printf("The area is %.2f \n", my.getArea());
		System.out.printf("The perimeter is %.2f \n", my.getPerimeter());
		System.out.println("Triangle: side1 = " + side1 + " side2 = " + side2 + " side3 = " + side3);
		
		
}
}
